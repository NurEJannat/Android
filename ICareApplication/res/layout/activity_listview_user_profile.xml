<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="#003333" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:gravity="center"
        android:text="@string/tv__userprofile_listview_heder"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/aqbak"
        android:orientation="vertical"
        android:padding="5dp" >

        <ListView
            android:id="@+id/lv_profilelistview"
            android:layout_width="match_parent"
          android:background="@drawable/aqbak"
            android:layout_height="148dp"
             android:textColor="#000000" >
        </ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        
        android:layout_height="wrap_content" 
         android:background="@drawable/aqbak">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgVEmergencyCall"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/emg" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/tv__userprofile_listview_EmergencyCall"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_carecenter"
                        android:layout_width="128dp"
                        android:layout_height="80dp"
                  
                        android:src="@drawable/med" />

                    <TextView
                        android:id="@+id/textView6fgjh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/tv__userprofile_listview_carecenter"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_importantnotes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                      
                        android:src="@drawable/notes" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/tv__userprofile_listview_Gallery"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                  
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_About"
                        android:layout_width="128dp"
                        android:layout_height="80dp"
                     
                        android:src="@drawable/info" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/tv__userprofile_listview_medical"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
